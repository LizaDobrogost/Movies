@model AmazeOne.Models.GIS.JobAndPhaseCreateEditModel
@{
    ViewBag.Title = "Job And Phase Edit Page";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Job And Phase</legend>
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.CountryId)
        @Html.HiddenFor(model => model.JobAndPhaseId)

        <div class="editor-label">@Html.LabelFor(model => model.PhaseTypeId)</div>
        <div class="editor-field">@Html.DropDownListFor(model => model.PhaseTypeId, Model.PhaseTypes)</div>

        <div class="editor-label">
            @Html.LabelFor(model => model.JobAndPhaseNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.JobAndPhaseNumber)
            @Html.ValidationMessageFor(model => model.JobAndPhaseNumber)
        </div>

        <p>
            <input type="submit" value="Save Job And Phase" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Country", "Edit", "Country", new { id = Model.CountryId }, new object { })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}