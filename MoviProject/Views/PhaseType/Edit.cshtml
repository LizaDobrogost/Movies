@model AmazeOne.Models.GIS.PhaseTypeCreateEditModel
@{
    ViewBag.Title = "Phase Type Edit Page";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Job And Phase</legend>
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.ClientId)
        @Html.HiddenFor(model => model.PhaseTypeId)

        <div class="editor-label">
            @Html.LabelFor(model => model.PhaseTypeDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhaseTypeDescription)
            @Html.ValidationMessageFor(model => model.PhaseTypeDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsSupportPhaseType)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.IsSupportPhaseType)
        </div>

        <p>
            <input type="submit" value="Save Phase Type" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Client", "Edit", "Client", new { id = Model.ClientId }, new object { })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}