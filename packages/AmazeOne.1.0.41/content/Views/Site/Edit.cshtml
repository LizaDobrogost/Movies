@model AmazeOne.Models.GIS.SiteCreateEditModel
@{
    ViewBag.Title = "Site Details Page";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Site</legend>
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.SiteId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SiteName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SiteName)
            @Html.ValidationMessageFor(model => model.SiteName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SiteUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SiteUrl)
            @Html.ValidationMessageFor(model => model.SiteUrl)
        </div>

        <div class="editor-label">@Html.LabelFor(s => s.CountryId)</div>
        
        <div class="editor-field">@Html.DropDownListFor(s => s.CountryId, Model.Countries)</div>

        <div class="editor-label">@Html.LabelFor(s => s.BandId)</div>
        <div class="editor-field">@Html.DropDownListFor(s => s.BandId, Model.Bands)</div>

        <div class="editor-label">@Html.LabelFor(s => s.ClusterId)</div>
        <div class="editor-field">@Html.DropDownListFor(s => s.ClusterId, Model.Clusters)</div>

        <div class="editor-label">@Html.LabelFor(s => s.LanguageId)</div>
        <div class="editor-field">@Html.DropDownListFor(s => s.LanguageId, Model.Languages)</div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}